@model TN218.Models.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng nhập</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link rel="icon" type="image/png" sizes="16x16" href="~/Content/Image/logo/logo.png">
    <link href="~/Assets/css/style.min.css" rel="stylesheet">
</head>
<body>
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-6 col-10">
            <div class="card shadow border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Đăng nhập</h3></div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        ;
                        <fieldset>
                            <div class="form-floating mt-1">
                                @Html.TextBoxFor(model => model.SoDienThoai,
                            new
                            {
                            @id = "sdt",
                            @class = "form-control",
                            @placeholder = "Tên đăng nhập",
                            @autofocus = "autofocus"
                            })
                                <label for="sdt">Số điện thoại</label>
                            </div>
                            @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger p-2" })
                            <div class="form-floating mt-2">
                                @Html.TextBoxFor(model => model.Password,
                            new
                            {
                            @id = "Password",
                            @class = "form-control",
                            @placeholder = "Password",
                            @type = "password"
                            })
                                <label for="Password">Mật khẩu</label>
                            </div>
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger p-2" })
                            <div class="form-check mt-2">
                                @Html.CheckBoxFor(model => model.Rememberme,
                            new
                            {
                            @id = "Rememberme"
                            })
                                <label class="form-check-label" for="Rememberme">
                                    Ghi nhớ tài khoản đăng nhập
                                </label>
                            </div>
                            <div class="d-flex align-items-center justify-content-between mt-1 mb-0">
                                <button type="submit" class="btn btn-success btn-sm mx-auto">Đăng nhập</button>
                            </div>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>

